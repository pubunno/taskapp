<div class="container">
	<table class="table table-bordered table-striped table-hover table-condensed">
	<tbody>
		<% @projects.each do |project| %>
		<tr>
			<td><%= link_to project.title, project_path(project.id) %>&nbsp;<span class="badge"><%= project.tasks.unfinished.count %>/<%= project.tasks.count %></span></td>
			<td>
				<%= link_to "編集", edit_project_path(project.id), {class: "btn btn-warning"} %>
				<%= link_to "削除", project_path(project.id), method: :delete, data: { confirm: "are you sure?" }, class: "btn btn-danger" %>
			</td>
		</tr>
		<% end %>
	</tbody>
	</table>
	<%= link_to "新しくスケジュール表をつくる", new_project_path, {:class => 'btn btn-primary'} %></p>
</div>
